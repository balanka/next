{
    "name": "next",
    "version": "0.0.1",
    "description": "the next version of material-table-core",
    "main": "index.ts",
    "repository": "https://github.com/material-table-core/next.git",
    "author": "material-table-core contributors",
    "license": "MIT",
    "private": false,
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.10.0",
        "@typescript-eslint/parser": "^4.10.0",
        "eslint": "^7.15.0",
        "eslint-config-prettier": "^7.0.0",
        "eslint-plugin-prettier": "^3.3.0",
        "module-alias": "^2.2.2",
        "prettier": "^2.2.1",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "typescript": "^4.1.3"
    },
    "_moduleAliases": {
        "@root": "."
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "./node_modules/.bin/eslint --fix",
            "./node_modules/.bin/prettier --write ."
        ]
